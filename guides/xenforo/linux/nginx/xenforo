server {
  server_name xenforo.ulyaoth.net;
  listen 80;
  autoindex off;
  index index.php;
  access_log /var/log/nginx/xenforo/access.log;
  error_log /var/log/nginx/xenforo/error.log;
  root /usr/share/nginx/xenforo/public;

if ($http_user_agent ~ "Windows 95|Windows 98|biz360.com|xpymep|TurnitinBot|sindice|Purebot|libwww-perl")  {
  return 403;
  break;
}

location / {
  try_files $uri $uri/ /index.php?$uri&$args;
  index index.php index.html;
}

location = /favicon.ico {
  alias  /usr/share/nginx/xenforo/public/favicon.ico;
}

location /install/ {
location ~ \.php {
  rewrite ^ http://$host permanent;
}
  rewrite ^ http://$host permanent;
}

location /internal_data/ {
  internal;
}

location /library/ {
  internal;
}

location ~ \.php$ {
  try_files $uri =404;
  fastcgi_split_path_info ^(.+\.php)(/.+)$;
  fastcgi_pass 127.0.0.1:9000;
  fastcgi_index  index.php;
  fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
  include /etc/nginx/fastcgi_params;
}
}